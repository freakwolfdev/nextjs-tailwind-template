echo "🚀 Starting pre-commit checks..."
echo ""

# Step 1: TypeScript type checking
echo "📝 Step 1/2: Running TypeScript type checking..."
echo "   Checking for type errors and compilation issues..."
bunx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type checking failed!"
  echo "   Please fix the type errors before committing."
  exit 1
fi
echo "✅ TypeScript type checking passed!"
echo ""

# Step 2: Linting and formatting
echo "🧹 Step 2/2: Running Biome linting and formatting checks..."
echo "   Checking code style, formatting, and potential issues..."
bun run check
if [ $? -ne 0 ]; then
  echo "❌ Linting and formatting checks failed!"
  echo "   Please fix the linting issues before committing."
  exit 1
fi
echo "✅ Linting and formatting checks passed!"
echo ""

echo "✅ All checks passed! Proceeding with commit..."
