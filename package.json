{
  "name": "nextjs-tailwind4-template",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev --port 5172",
    "dev:path": "pathpida --ignorePath .gitignore --watch",
    "build": "pathpida --ignorePath .gitignore && next build",
    "start": "next start --port 4172",
    "lint": "biome check ./src --error-on-warnings",
    "format": "biome format --write ./src",
    "fix": "biome check --write ./src",
    "type-check": "tsc --noEmit --project tsconfig.json"
  },
  "dependencies": {
    "next": "^16.0.7",
    "npm-run-all": "^4.1.5",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "lefthook": "^2.0.8",
    "pathpida": "^0.25.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  }
}
